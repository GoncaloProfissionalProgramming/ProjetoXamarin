<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasBackButton="True"
             Title="Editar Curriculo"
       
             
             x:Class="ProjetoFinal.EditCurriculoPage">
    <ContentPage.Content>

        <StackLayout>
        <Label Text="Telemóvel" Margin="0,30,0,0" TextColor="Black"/>
        <Entry x:Name="Et_Telemovel" Margin="0,10,0,0" />
        <Label Text="E-mail" Margin="0,30,0,0" TextColor="Black"/>
        <Entry x:Name="Et_email" Margin="0,10,0,0" />
        <Label Text="Morada" Margin="0,30,0,0" TextColor="Black"/>
        <Entry x:Name="Et_Morada"  Margin="0,10,0,0"/>

        <Button x:Name="Bt_Edit" Text="Editar Curriculo" BackgroundColor="Red" TextColor="White" Clicked="Bt_Edit_Clicked" Margin="0,60,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>